<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_trailer_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/iv_trailer_item_description"
        android:scaleType="fitXY"
        tools:src="@drawable/image_example" />

    <TextView
        android:id="@+id/tv_trailer_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_trailer_item"
        android:layout_marginTop="8dp"
        tools:text="Sample title very long title Sample title very long title"
        android:layout_alignStart="@+id/iv_trailer_item"
        android:layout_alignEnd="@+id/iv_trailer_item"
        android:layout_alignLeft="@+id/iv_trailer_item"
        android:layout_alignRight="@+id/iv_trailer_item"
        android:gravity="center_horizontal"/>

</RelativeLayout>